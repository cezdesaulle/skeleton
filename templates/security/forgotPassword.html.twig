{% extends 'base.html.twig' %}
{% block title %}
  {{ parent() }} Mot de passe oublié
{% endblock %}

{% block h1 %}
    Réinitialisation de mot de passe
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form method="post" action="{{ path('forgotPassword') }}">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" placeholder="veuillez saisir votre email" name="email" id="email">
                </div>
                <button type="submit" class="btn btn-primary mt-4">Envoyer</button>
            </form>

        </div>


    </div>


{% endblock %}


