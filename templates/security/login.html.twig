{% extends 'base.html.twig' %}
{% block title %}
        {{ parent() }}Connexion
{% endblock %}
{% block h1 %}
    Connexion
{% endblock %}




{% block body %}
    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" class="form-control"  type="text" name="_username" placeholder="Veuillez saisir votre email">
                </div>
                <div class="form-group">
                    <label for="mdp" class="form-label">Mot de passe</label>
                    <input id="mdp" class="form-control" type="password" name="_password" placeholder="Veuillez saisir votre mot de passe">
                </div>
                <a href="{{ path('forgotPassword') }}">Mot de passe oubli√© ?</a><br>
                <a href="{{ path('registration') }}">Pas encore inscrit ?</a><br>

                <button type="submit" class="btn btn-secondary mt-3">Valider</button>


            </form>



        </div>




    </div>





{% endblock %}



