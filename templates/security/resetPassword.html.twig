{% extends 'base.html.twig' %}
{% block title %}
        {{ parent() }} Init Mot de passe
{% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form method="post" action="{{ path('resetPassword') }}">
                <div class="form-group">
                    <label for="email">Mot de passe</label>
                    <input type="password" class="form-control" placeholder="veuillez saisir un nouveau mot de passe" name="password" id="email">
                </div>
                <div class="form-group">
                    <label for="email">Confirmation de mot de passe</label>
                    <input type="password" class="form-control" placeholder="veuillez confirmer votre nouveau mot de passe" name="confirmPassword" id="email">
                </div>
                <input type="hidden" name="id" value={{ id }}>
                <button type="submit" class="btn btn-primary mt-4">Envoyer</button>
            </form>

        </div>


    </div>


{% endblock %}



